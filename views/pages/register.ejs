<!-- views/pages/login.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/unsemantic/1.1.3/unsemantic-grid-responsive-no-ie7.min.css" />
</head>

<body>
  <div id="potd" style="background: url(<%= potd.hdurl %>);"></div>
  <div id="overlay">
    <div id="login-container">
      <h1><b>Register on <span class="main-text">Notus</span></b></h1>
      <h4> Create an account below.</h4>



      <br/>
      <div id="error-container" class="hidden">
        <span></span>
      </div>
      <br/>

      <form id="register-form" method="post" class="grid-container">
        <input class="grid-100" type="text" name="username" id="username-textbox" placeholder="username">
        <br/>
        <input class="grid-100" type="email" name="email" id="email-textbox" placeholder="email">
        <br/>
        <input class="grid-50" type="password" name="password" id="password-textbox" placeholder="password">
        <input class="grid-50" type="password" name="conPassword" id="password2-textbox" placeholder="confirm password">
          <br/>
        <input class="grid-100" type="submit" name="action" id="register" value="Register">
      </form>
      <br/>
      <p>Have an account? <a href="/login">Login here</a> </p>
    </div>
  </div>

  <script src="/js/init.js"></script>
</body>

</html>