<!-- views/pages/login.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/sweetalert2/6.6.2/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    <script src="https://cdn.jsdelivr.net/sweetalert2/6.6.2/sweetalert2.min.js"></script>
</head>

<body>
  <div id="potd" style="background: url(<%= potd.hdurl %>);"></div>
  <div id="overlay">
    <div id="login-container">
      <h1><b>Reset your password</b></h1>
      <h4> Enter your new password below and confirm.</h4>



      <br/>
      <div id="error-container" class="hidden">
        <span></span>
      </div>
      <br/>

      <form id="reset-form" method="post" class="grid-container">
        <input type="hidden" name="token" id="token" value="<%= token %>">
        <br/>        
        <input type="password" name="password" id="password-textbox" placeholder="new password">
        <br/>
        <input type="password" name="confirmPassword" id="cpassword-textbox" placeholder="confirm password">
        <br/>
        <input type="submit" name="action" id="register" value="Submit">
      </form>
      <br/>
      <p>Have an account? <a href="/login">Login here</a> </p>
    </div>
  </div>

  <script src="/js/init.js"></script>
</body>

</html>